<style>
  body {
    background-color: #EEE;
  }
</style>
<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary shadow">
  <a class="navbar-brand" href="#">ToDo</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav ml-auto">
      <a href="/" class="log-out nav-item nav-link active" href="#">Log Out<span class="sr-only">(current)</span></a>
    </div>
  </div>
</nav>
<div class="container h-100">
  <div class="row justify-content-center" style="margin-top: 5em;">
    <div class="col">
      <h2>Your Tasks</h2>
      <form method="POST" action="/home/{{userEmail}}/newItem">
        <div class="input-group mb-3">
          <input id="task" name="task" type="text" required class="form-control" placeholder="Add Task" aria-label="Add task" aria-describedby="basic-addon2">
          <div class="input-group-append">
          <button class="btn btn-primary" type="submit">+</button>
          </div>
        </div>
      </form>
      <ul class="tasks list-group list-group">
        {{#each data}}
        <li id="{{ this.id }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            {{ this.title }}
            <span class="badge badge-danger">X</span>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<script src="/javascripts/taskHandler.js"></script>
